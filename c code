#include<stdio.h>
int main()
{
 int n;
 scanf("%d",&n);
 for(int i=n;i>=1;i--){
    for(int spaces=i+1;spaces<=n;spaces++){  //since the each row has stars series of 1,3,5,7... then just twice the row and minus 1 is required
         printf(" ");
      }
       for(int j=1;j<2*i;j++){  //or j<=(2*i)-1
         printf(" * "); 
    }
 printf("\n");
 }
 return 0;
}
